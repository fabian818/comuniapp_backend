<md-subheader class="md-no-sticky">
	<div style="display: table; overflow: hidden; margin-left: 400px;" layout="row">
		<div flex="10">
		</div>
		<div style="display: table-cell; vertical-align: middle;" flex="40">
			Vista detallada de la guia.
		</div>
		<div flex="40">
			<md-button class="md-raised md-primary" ui-sref="questions-index">Regresar a lista de preguntas y guias</md-button>
		</div>
		<div flex="10">
		</div>
	</div>
</md-subheader>
<md-content class="md-padding" layout-xs="column" layout="row">
	<div flex="25"></div>
	<div flex-xs flex-gt-xs="50" layout="column">
		<md-card>
			<md-card-title>
				<md-card-title-text layout-align="center center">
					<span class="md-headline">{{question.title}}</span>
				</md-card-title-text>
			</md-card-title>
			<md-card-content>
				<h3>Respuesta</h3>
				<p>{{question.answer}}</p>
			</md-card-content>
		</md-card>
	</div>
	<div flex="25"></div>
</md-content>