#body
  %md-subheader.md-no-sticky
    %div{:layout => "row", :style => "display: table; overflow: hidden; margin-left: 400px;"}
      %div{:flex => "10"}
      %div{:flex => "40", :style => "display: table-cell; vertical-align: middle;"}
        Editar la guia seleccionada.
      %div{:flex => "40"}
        %md-button.md-raised.md-primary{"ui-sref" => "questions-index"} Regresar a lista de preguntas y guias
      %div{:flex => "10"}
  %form{"ng-submit" => "send()"}
    %div{:layout => "row"}
      %div{:flex => "25"}
      %div{:flex => "50"}
        %md-card.form-padding
          %md-input-container.md-block
            %label Titulo
            %input{"ng-model" => "question.title"}/
          %md-input-container.md-block
            %label Respuesta
            %textarea{"md-maxlength" => "500", "md-select-on-focus" => "", "ng-model" => "question.answer", :rows => "5"}
          %br/
          %div{:layout => "row"}
            %md-button.md-raised.md-primary{:flex => "100", :type => "submit"} Modificar
      %div{:flex => "25"}
